{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": [
      "vite-plugin-vue-layouts/client",
      "vite-plugin-pages/client",
      "vite/client",
      "unplugin-vue2-script-setup/types"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "**/*.ts",
    "src/**/*.js",
    "**/*.tsx",
    "**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/unit/axios.js"
  ],
  "exclude": ["node_modules", "mock", "build", "dist", "permission.js"]
}
